<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Savings Goals</title>
    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <!-- Custom CSS -->
    <link href="/styles.css" rel="stylesheet">
</head>
<body>
    <header class="bg-primary text-white text-center py-3">
        <h1>Manage Savings Goals</h1>
    </header>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="/dashboard">Dashboard</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item"><a class="nav-link" href="/budgets">Manage Budgets</a></li>
                    <li class="nav-item"><a class="nav-link" href="/expenses">Manage Expenses</a></li>
                    <li class="nav-item"><a class="nav-link" href="/savingsGoals">Manage Savings Goals</a></li>
                    <li class="nav-item"><a class="nav-link" href="/bills">Manage Bills</a></li>
                    <li class="nav-item"><a class="nav-link" href="/logout">Logout</a></li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container my-5">
        <h2>Add Savings Goal</h2>
        <form action="/savingsGoals" method="post">
            <div class="form-group">
                <label for="goal_name">Goal Name</label>
                <input type="text" class="form-control" id="goal_name" name="goal_name" required>
            </div>
            <div class="form-group">
                <label for="target_amount">Target Amount</label>
                <input type="number" step="0.01" class="form-control" id="target_amount" name="target_amount" required>
            </div>
            <div class="form-group">
                <label for="current_amount">Current Amount</label>
                <input type="number" step="0.01" class="form-control" id="current_amount" name="current_amount">
            </div>
            <div class="form-group">
                <label for="target_date">Target Date</label>
                <input type="date" class="form-control" id="target_date" name="target_date" required>
            </div>
            <button type="submit" class="btn btn-primary">Add Savings Goal</button>
        </form>
        <h2 class="mt-5">Your Savings Goals</h2>
        <ul class="list-group">
            <% goals.forEach(function(goal) { %>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <span><%= goal.goal_name %> - $<%= goal.target_amount %> by <%= new Date(goal.target_date).toLocaleDateString() %> (Current: $<%= goal.current_amount %>)</span>
                    <form action="/savingsGoals/<%= goal.id %>/delete" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-danger btn-sm">Remove</button>
                    </form>
                </li>
            <% }); %>
        </ul>
    </div>
    <footer class="bg-primary text-white text-center py-3">
        &copy; 2024 All in One Finance. All rights reserved.
    </footer>

    <!-- Bootstrap JS and dependencies -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.3/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.amazonaws.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
